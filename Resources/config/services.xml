<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="services/contexts.xml"/>
        <import resource="services/emails.xml"/>
        <import resource="services/forms.xml"/>
        <import resource="services/listeners.xml"/>
        <import resource="services/processors.xml"/>
        <import resource="services/schemas.xml"/>
        <import resource="services/security.xml"/>
        <import resource="services/validators.xml"/>
    </imports>

    <services>
        <service id="toro.grid_filter.multi_string" class="Toro\Bundle\CoreBundle\Grid\Filter\MultiStringFilter">
            <tag name="sylius.grid_filter" type="multi_string" form-type="Sylius\Bundle\GridBundle\Form\Type\Filter\StringFilterType" />
        </service>
        <service id="toro.grid_filter.extra_string" class="Toro\Bundle\CoreBundle\Grid\Filter\ExtraStringFilter">
            <tag name="sylius.grid_filter" type="extra_string" form-type="Sylius\Bundle\GridBundle\Form\Type\Filter\StringFilterType" />
        </service>
    </services>
</container>
